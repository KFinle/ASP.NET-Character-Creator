@model Lab5.Models.Character

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this character?</h3>
<div>

    <hr />

    <!--DISPLAY CHARACTER INFO-->
    <dl class="row">
        <dt class="col-sm-10">
            @Html.LabelFor(model => model.name, "Name")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.name)
        </dd>
        <dt class="col-sm-10">
            @Html.LabelFor(model => model.role, "Role")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.role)
        </dd>
        <dt class="col-sm-10">
            @Html.LabelFor(model => model.maxHP, "Max Hit Points")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.maxHP)
        </dd>
        <dt class="col-sm-10">
            @Html.LabelFor(model => model.currentHP, "Current Hit Points")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.currentHP)
        </dd>
        <dt class="col-sm-10">
            @Html.LabelFor(model => model.maxAP, "Max Action Points")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.maxAP)
        </dd>
        <dt class="col-sm-10">
            @Html.LabelFor(model => model.currentAP, "Current Action Points")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.currentAP)
        </dd>
        <dt class="col-sm-10">
            @Html.LabelFor(model => model.currentLevel, "Current Level")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.currentLevel)
        </dd>
        <dt class="col-sm-10">
            @Html.LabelFor(model => model.currentExp, "Current Experience Points")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.currentExp)
        </dd>
        <dt class="col-sm-10">
            @Html.LabelFor(model => model.expToNextLevel, "Experience Points Needed for Next Level")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.expToNextLevel)
        </dd>
    </dl>
    
    <!--SUBMIT DELETE-->
    <form asp-action="Delete">
        <input type="hidden" asp-for="characterID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
